<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xmlns="https://jakarta.ee/xml/ns/jakartaee"
		 xmlns:web="http://xmlns.jcp.org/xml/ns/javaee"
		 xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
		 id="WebApp_ID" version="5.0">
    <display-name>LB5jaxwsBookServiceWebClient</display-name>
    <context-param>
        <description>Wsdl location</description>
        <param-name>wsdl</param-name>
        <param-value>http://localhost:9000/articles?wsdl</param-value>
    </context-param>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <display-name>EncodingFilter</display-name>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>ua.nure.article.server.filter.EncodingFilter</filter-class>
        <init-param>
            <description/>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>ua.nure.article.server.listener.ContextListener</listener-class>
    </listener>
    <servlet>
        <description>List existing articles</description>
        <display-name>ListArticles</display-name>
        <servlet-name>ListArticles</servlet-name>
        <servlet-class>ua.nure.article.server.client.web.ListArticles</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListArticles</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <description/>
        <display-name>AddArticle</display-name>
        <servlet-name>AddArticle</servlet-name>
        <servlet-class>ua.nure.article.server.client.web.AddArticle</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddArticle</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <description/>
        <display-name>AddComment</display-name>
        <servlet-name>AddComment</servlet-name>
        <servlet-class>ua.nure.article.server.client.web.AddComment</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddComment</servlet-name>
        <url-pattern>/addcomment</url-pattern>
    </servlet-mapping>
    <servlet>
        <description/>
        <display-name>AddGrade</display-name>
        <servlet-name>AddGrade</servlet-name>
        <servlet-class>ua.nure.article.server.client.web.AddGrade</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddGrade</servlet-name>
        <url-pattern>/addgrade</url-pattern>
    </servlet-mapping>
    <servlet>
        <description/>
        <display-name>FindArticleByTag</display-name>
        <servlet-name>FindArticleByTag</servlet-name>
        <servlet-class>ua.nure.article.server.client.web.FindArticleByTag</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindArticleByTag</servlet-name>
        <url-pattern>/findarticletag</url-pattern>
    </servlet-mapping>
</web-app>